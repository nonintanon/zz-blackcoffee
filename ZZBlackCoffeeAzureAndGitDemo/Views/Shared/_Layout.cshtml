<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - KERMIS SUPER DEAL</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css">
    <link href="~/Content/maginifc-popup.css" rel="stylesheet" />
    <link href="~/Content/animate-custom.css" rel="stylesheet" />
    <link href="~/Content/css/magnific-popup.animation.min.css" rel="stylesheet" />
    @Styles.Render("~/styles")
    @Scripts.Render("~/bundles/modernizr")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Welcome to Old Trafford!</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="active"><a href="@Url.Action("index", "home")">Squad 2013-2014</a></li>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </nav>
            <div class="jumbotron">
                <div class="container">
                    <h1>MANCHESTER UNITED</h1>
                </div>
            </div>
        </div>
    </header>
    <div class="wrapper">
        <div class="content-main">
            <div class="container">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="text-center">
                @DateTime.UtcNow.Year &copy; <a href="@Url.Action("index", "home")">MANCHESTER UNITED</a>
            </div>
        </div>
    </footer>
    <!-- Popup itself -->
    <div id="test-popup" class="white-popup mfp-with-anim mfp-hide">You may put any HTML here. This is dummy copy. It is not meant to be read. It has been placed here solely to demonstrate the look and feel of finished, typeset text. Only for show. He who searches for meaning here will be sorely disappointed.</div>
    @Scripts.Render("~/bundles/jquery")
    @*    <!-- Latest compiled and minified JavaScript -->
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>*@
    <script src="~/Scripts/jquery.isotope.min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.js"></script>
    @Scripts.Render("~/bundles/libs")
    @RenderSection("scripts", required: false)
</body>
</html>
